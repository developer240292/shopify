                          {% endif %}
                          {%- if block.settings.header_shipping1 != blank -%}
                            <p>{{ block.settings.header_shipping1 }}</p>
                          {% endif %}
                        </li>
                      </ul>
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {%- endfor -%}
