                          {% endif %}
                          {%- if block.settings.header_pay1 != blank -%}
                            <p>{{ block.settings.header_pay1 }}</p>
                          {% endif %}
                        </li>
                      </ul>
                    </div>
                  {% endif %}
                  {% if block.settings.sb_title %}
                    <div class="multicolumn-list__item grid__item center">
                      <ul>
                        <li>
                          <span>{% render 'icon-allservice', icon: block.settings.icon3 %}</span>
                        </li>
                        <li>
                          {%- if block.settings.header_support != blank -%}
