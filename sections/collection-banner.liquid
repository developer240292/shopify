<div class="homecolbnr section-{{ section.id }}-padding">
  <div class="">
    <div class="container">
                <div class="row rless vtprinal">
                    {% if section.settings.showimage1 %}
                    <div class="cless {% unless section.settings.showimage1 %}{% else %} homecolbnrin1{% endunless %}">
                        <div class="beffect">
                            {% if section.settings.link1 != blank %}<a href="{{ section.settings.link1 }}"
                                title="{{ 'vtcustomlabel.vtalltext.banner' | t }}">{% endif%}
                                {% if section.settings.image1 != blank %}
                                <img src="{{ section.settings.image1 | img_url: 'master' }}"
                                    alt="{{ section.settings.image1.alt }}" class="mx-auto"
                                    width="{{ section.settings.image1.width }}"
                                    height="{{ section.settings.image1.height }}" />
                                {% else %}
                               <div class="dummysvg">{{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}</div>
                                {% endif %}
                                <div class="vtsetbntxt">
                                    <div class="vtdip">
                                        {% if section.settings.storylable1 != blank %}
                                        <h2>{{ section.settings.storylable1 }}</h2>
                                        {% endif %}
                                        {% if section.settings.storydesc1 != blank %}
                                        <h3>{{ section.settings.storydesc1 }}</h3>
                                        {% endif %}
                                       {%- if section.settings.button_label_1 != blank -%}
                                          <a {% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_1 }}"{% endif %} class="button button--primary">{{ section.settings.button_label_1 | escape }}</a>
                                       {%- endif -%} 
                                    </div>
                                </div>
                                {% if section.settings.link1 != blank %}</a>{% endif %}
                        </div>
                    </div>
                    {% endif %}

                    {% if section.settings.showimage2 %}
                    <div class="cless {% unless section.settings.showimage2 %} {% else %} homecolbnrin2{% endunless %}">
                        <div class="beffect">
                            {% if section.settings.link2 != blank %}<a href="{{ section.settings.link2 }}"
                                title="{{ 'vtcustomlabel.vtalltext.banner' | t }}">{% endif%}
                                {% if section.settings.image2 != blank %}
                                <img src="{{ section.settings.image2 | img_url: 'master' }}"
                                    alt="{{ section.settings.image2.alt }}" class="mx-auto"
                                    width="{{ section.settings.image2.width }}"
                                    height="{{ section.settings.image2.height }}" />
                                {% else %}
                                  <div class="dummysvg">{{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}</div>
                                {% endif %}
                                <div class="vtsetbntxt">
                                    <div class="vtdip">
                                        {% if section.settings.storylable2 != blank %}
                                        <h2>{{ section.settings.storylable2 }}</h2>
                                        {% endif %}
                                        {% if section.settings.storydesc2 != blank %}
                                        <h3>{{ section.settings.storydesc2 }}</h3>
                                        {% endif %}
                                        {%- if section.settings.button_label_2 != blank -%}
                                          <a {% if section.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_2 }}"{% endif %} class="button button--primary">{{ section.settings.button_label_2 | escape }}</a>
                                        {%- endif -%} 
                                    </div>
                                </div>
                                {% if section.settings.link2 != blank %}</a>{% endif %}
                        </div>
                    </div>
                    {% endif %}
               
                    {% if section.settings.showimage3 %}
                    <div class="cless {% unless section.settings.showimage3 %} {% else %} homecolbnrin3{% endunless %}">
                        <div class="beffect">
                            {% if section.settings.link3 != blank %}<a href="{{ section.settings.link3 }}"
                                title="{{ 'vtcustomlabel.vtalltext.banner' | t }}">{% endif%}
                                {% if section.settings.image3 != blank %}
                                <img src="{{ section.settings.image3 | img_url: 'master' }}"
                                    alt="{{ section.settings.image3.alt }}" class="mx-auto"
                                    width="{{ section.settings.image3.width }}"
                                    height="{{ section.settings.image3.height }}" />
                                {% else %}
                                   <div class="dummysvg">{{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}</div>
                                {% endif %}
                                <div class="vtsetbntxt">
                                    <div class="vtdip">
                                        {% if section.settings.storylable3 != blank %}
                                           <h2>{{ section.settings.storylable3 }}</h2>
                                        {% endif %}
                                        {% if section.settings.storydesc3 != blank %}
                                          <h3>{{ section.settings.storydesc3 }}</h3>
                                        {% endif %}
                                        {%- if section.settings.button_label_3 != blank -%}
                                          <a {% if section.settings.button_link_3 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_3 }}"{% endif %} class="button button--primary">{{ section.settings.button_label_3 | escape }}</a>
                                        {%- endif -%} 
                                    </div>
                                </div>
                                {% if section.settings.link3 != blank %}</a>{% endif %}
                        </div>
                    </div>
                    {% endif %}    
              </div>
        </div>
    </div>
  </div>
</div>
</div> 

{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    }
} 
.homecolbnr .beffect h3 span.btn-primary{
    background: {{ section.settings.collbg1 }};
    color: {{ section.settings.collbgtxt }};
    border-color: {{ section.settings.collbgborder }};
}
.homecolbnr .beffect h3 span.btn-primary:hover{
    background: {{ section.settings.collbg1hv }};
    border-color: {{ section.settings.collbgborderhv }};
    color: {{ section.settings.collbgtxthv }};
}
{%- endstyle -%}
