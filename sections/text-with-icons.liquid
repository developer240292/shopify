{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .deliveryinfo ul .multis-svg svg {
    width: {{ section.settings.iconwidth }}px;
    height: {{ section.settings.iconwidth }}px;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    }
    .deliveryinfo ul .multis-svg svg {
      width: 28px;
      height: 28px;
    }
  }
{%- endstyle -%}
<div class="container section-{{ section.id }}-padding">
  {% if section.settings.title != blank %}
    <h2 class="heading text-left {{ section.settings.heading_size }}">
      <span>{{ section.settings.title }}</span>
    </h2>
  {% endif %}
  <div class="row deliveryinfo">
    {% if section.settings.s_title %}
      <div class="col-12 col-sm-4 col-md-4 cless">
        <ul>
          <li>
            <span>{% render 'icon-allservice', icon: section.settings.icon1 %}</span>
          </li>
          <li>
            <h4>{{ section.settings.header_gift }}</h4>
            <p>{{ section.settings.header_gift1 }}</p>
          </li>
        </ul>
      </div>
    {% endif %}
    {% if section.settings.sa_title %}
      <div class="col-12 col-sm-4 col-md-4 cless">
        <ul>
          <li>
            <span>{% render 'icon-allservice', icon: section.settings.icon2 %}</span>
          </li>
          <li>
            <h4>{{ section.settings.header_pay }}</h4>
            <p>{{ section.settings.header_pay1 }}</p>
          </li>
        </ul>
      </div>
    {% endif %}
    {% if section.settings.sb_title %}
      <div class="col-12 col-sm-4 col-md-4 cless">
        <ul>
          <li>
            <span>{% render 'icon-allservice', icon: section.settings.icon3 %}</span>
          </li>
          <li>
            <h4>{{ section.settings.header_support }}</h4>
            <p>{{ section.settings.header_support1 }}</p>
          </li>
        </ul>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Text with icons",
    "tag": "section",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.multicolumn.settings.title.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          }, {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          }, {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h0",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "range",
        "id": "iconwidth",
        "min": 0,
        "max": 65,
        "step": 1,
        "unit": "px",
        "label": "Icon width",
        "default": 65,
        "info": "This option work only on desktop view"
      },
      {
        "type": "select",
        "id": "column_alignment",
        "options": [
          {
            "value": "left",
            "label": "t:sections.multicolumn.settings.column_alignment.options__1.label"
          }, {
            "value": "center",
            "label": "t:sections.multicolumn.settings.column_alignment.options__2.label"
          }
        ],
        "default": "center",
        "label": "t:sections.multicolumn.settings.column_alignment.label"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 60
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "text with icon",
        "settings": [
          {
            "type": "select",
            "id": "icon1",
            "options": [
              {
                "value": "none",
                "label": "t:sections.main-product.blocks.collapsible_tab.settings.icon.options__1.label"
              },
              {
                "value": "box",
                "label": "Box"
              },
              {
                "value": "shipping",
                "label": "Shipping"
              },
              {
                "value": "service",
                "label": "24/7 Service"
              }, {
                "value": "offer",
                "label": "Offer"
              }, {
                "value": "support",
                "label": "Support"
              }, {
                "value": "delivery",
                "label": "Truck"
              }, {
                "value": "moneyback",
                "label": "Dollar sign"
              }, {
                "value": "gift",
                "label": "Gift"
              }, {
                "value": "coloruser",
                "label": "Color user"
              }, {
                "value": "colorpayment",
                "label": "Color payment"
              }, {
                "value": "colorgift",
                "label": "Color gift"
              }, {
                "value": "colorship",
                "label": "Color shipping"
              }
            ],
            "default": "shipping",
            "label": "t:sections.main-product.blocks.collapsible_tab.settings.icon.label"
          }, {
            "type": "text",
            "id": "title",
            "default": "Title",
            "label": "t:sections.multicolumn.blocks.column.settings.title.label"
          }, {
            "type": "richtext",
            "id": "text",
            "default": "<p>Content description</p>",
            "label": "t:sections.multicolumn.blocks.column.settings.text.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Text with icons",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}